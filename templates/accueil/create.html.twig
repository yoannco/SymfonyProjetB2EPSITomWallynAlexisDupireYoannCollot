{% extends 'base.html.twig' %}


    {% block title %}Création/Edition d'une requete{% endblock %}

    {% block body %}
        <body class="fix-header fix-sidebar card-no-border">
        <!-- ============================================================== -->
        <!-- Main wrapper - style you can find in pages.scss -->
        <!-- ============================================================== -->
        <div id="main-wrapper">

            {% include 'navbargauche.html.twig' %}
            <div class="page-wrapper">
                <div class="row page-titles">
                    <div class="col-md-5 align-self-center">
                        <h3 class="text-themecolor">Tableau de board</h3>
                    </div>
                    <div class="col-md-7 align-self-center">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('accueil') }}">Accueil</a></li>
                            <li class="breadcrumb-item active">Création/Edition des requêtes</li>
                        </ol>
                    </div>

                </div>
                <!-- ============================================================== -->
                <!-- End Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Container fluid  -->
                <!-- ============================================================== -->
                <div class="container-fluid">
                    <!-- ============================================================== -->
                    <!-- Start Page Content -->
                    <!-- ============================================================== -->
                    <!-- Row -->
                    <div class="row">
                        <!-- Column -->
                        <div class="col-lg-12 col-xlg-9">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="card">
                                        <div class="bg-light p-20">
                                            <div class="d-flex">
                                                <div class="align-self-center">
                                                    <h3 class="m-b-0">Création/Edition d'une requête</h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                {{ form_start(formRequete) }}

                                                {{ form_row(formRequete.titre, {'attr': {'placeholder': "Titre de la requête"}}) }}
                                                {{ form_row(formRequete.url, {'attr': {'placeholder': "Url de la requête"}}) }}
                                                {{ form_row(formRequete.type) }}

                                                <button type="submit" class="btn btn-success">
                                                    {%  if editMode %}
                                                        Enregistrer
                                                    {%  else %}
                                                        Ajouter une requête
                                                    {% endif %}
                                                </button>

                                                {{ form_end(formRequete) }}
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>


                        <!-- Column -->
                    </div>
                </div>
            </div>
        </div>
        </body>




{% endblock %}