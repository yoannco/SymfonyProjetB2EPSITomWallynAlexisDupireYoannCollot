{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <body class="fix-header fix-sidebar card-no-border">
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <div id="main-wrapper">

        {% include 'navbargauche.html.twig' %}
        <div class="page-wrapper">
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-themecolor">Requête</h3>
                </div>
                <div class="col-md-7 align-self-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('accueil') }}">Accueil</a></li>
                        <li class="breadcrumb-item active">Liste des requêtes</li>
                    </ol>
                </div>

            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <!-- Row -->
                <div class="row">
                    <!-- Column -->
                    <div class="col-lg-12 col-xlg-9">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="bg-light p-20">
                                        <div class="d-flex">
                                            <div class="align-self-center">
                                                <h3 class="m-b-0">Liste des requêtes créées</h3><small>GET - POST</small></div>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover earning-box">
                                                <thead>
                                                <tr>
                                                    <th><b>#</b></th>
                                                    <th>Url</th>
                                                    <th>Type</th>
                                                    <th>Date</th>
                                                    <th>Action</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for requete in requetes %}
                                                    <tr>
                                                        <td>
                                                            <h6>{{ requete.titre }}</h6><small class="text-muted">{{ requete.id }}</small></td>
                                                        <td>{{ requete.url }}</td>
                                                        <td><span class="label label-success">{{ requete.type }}</span></td>
                                                        <td>{{ requete.createdAt | date('d/m/Y à H:i') }}</td>
                                                        <td>
                                                            <center>
                                                            <a href="{{ path('accueil_launch', {'id': requete.id}) }}"><i class="mdi mdi-play-circle-outline"></i></a>
                                                            <a href="{{ path('accueil_edit', {'id': requete.id}) }}"><i class="mdi mdi-tooltip-edit"></i></a>
                                                            <a href="{{ path('deleteRequete', {'id': requete.id}) }}"><i class="mdi mdi-delete"></i></a>
                                                            </center>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- Column -->
                </div>
            </div>
        </div>
    </div>
    </body>


{% endblock %}
